{
    "$schema": "./node_modules/@angular/service-worker/config/schema.json",
    "index": "/index.html",
    "assetGroups": [
        {
            "name": "app",
            "installMode": "prefetch",
            "resources": {
                "files": [
                    "/favicon.ico",
                    "/index.html",
                    "/manifest.webmanifest",
                    "/*.css",
                    "/*.js"
                ]
            }
        },
        {
            "name": "assets",
            "installMode": "lazy",
            "updateMode": "prefetch",
            "resources": {
                "files": [
                    "/assets/**",
                    "/*.(eot|svg|cur|jpg|png|webp|gif|otf|ttf|woff|woff2|ani)"
                ]
            }
        }
    ],
    "dataGroups": [
        {
            "name": "slides",
            "urls": [
                "**/slides"
            ],
            "cacheConfig": {
                "strategy": "freshness",
                "maxSize": 100,
                "maxAge": "7d",
                "timeout": "5s"
            }
        },
        {
            "name": "dpk",
            "urls": [
                "**/dpk/Dhun/**",
                "**/dpk/Prathana/**",
                "**/dpk/Kirtan/**",
                "https://www.googleapis.com/drive/v3/files/**"
            ],
            "cacheConfig": {
                "strategy": "freshness",
                "maxSize": 500,
                "maxAge": "8d",
                "timeout": "5s"
            }
        }
    ]
}
